{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "useUnknownInCatchVariables": false
  },
  "exclude": [
    "node_modules"
  ]
}